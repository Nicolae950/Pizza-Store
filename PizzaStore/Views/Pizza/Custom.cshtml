@model Product
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#customPizzaSubmitButton").click(function () {
            passAllSlicesToCheckout();
        });
    });

    function passAllSlicesToCheckout(){
        var slicesIds = new Array();
        pizza_object_array.forEach(function(item) {
            slicesIds.push(document.getElementById(item.input_id).value);
        });

        $.post('@Url.Action("Custom")', { SlicesIds: slicesIds }, 
            function(returnURL){
                window.location = returnURL;
            });
    }
</script>
<div>
    <h2 class="text-center"> Pizza Customizer</h2>
</div>
<form>
    <div class="container pb-2 pt-2">
        <hr />
        <div class="row col-12 mb-3 mt-3 text-center">
            <div class="col-sm-4">
                <div id="pizza-creator" class="pizzaCustomSvg">
                    <svg id="pizza-slices" class="pizzaSvgSize"> </svg>
                </div>
            </div>
            <div class="col-sm-1">
                <div class="vr" style="height:100%; width:1px;"></div>
            </div>
            <div class="col-sm-7">
                <div id="pizzaListDiv" class="pizzaCustomBoxAlign pizzaCustomBoxDimension flexColumnContainer addScroll">
                    <h4 id="result" class="boxAlign">Press on slice and chose a pizza</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="container pb-3 pt-2">
        <hr />
        <div class="text-center">
            <input type="button" name="ToCheckout" id="customPizzaSubmitButton" value="to checkout" class="btn btn-secondary ps-5 pe-5 text-capitalize" />
        </div>
    </div>
</form>

<script src="~/js/GlobalVariables.js" asp-append-version="true"></script>
<script src="~/js/PizzaEditDiamterSetter.js" asp-append-version="true"></script>
<script src="~/js/PizzaSliceSelector.js" asp-append-version="true"></script>
<script src="~/js/PatternSelector.js" asp-append-version="true"></script>