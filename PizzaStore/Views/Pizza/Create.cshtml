@model PizzaHelper

<div>
    <h2 class="text-center"> Pizza Customizer</h2>
</div>
<form method="post">
    <div class="container text-center">
        <div class="row mb-4 mt-4">
            <div id="4slices" class="diameterChoseDiv choseHorizontalAlign col ps-1 pe-1 ms-1 me-5">
                <svg class="diameterChose mb-2">
                    <ellipse style="fill: rgb(180, 180, 180); stroke: rgb(216, 216, 216); stroke-width: 3px" cx="125" cy="125" rx="123" ry="123"></ellipse>
                    <line style="fill: rgb(255, 255, 255); stroke: rgb(255, 255, 255); stroke-width: 3px" x1="125" y1="0" x2="125" y2="250"></line>
                    <line style="fill: rgb(255, 255, 255); stroke: rgb(255, 255, 255); stroke-width: 3px" x1="0" y1="125" x2="250" y2="125"></line>
                </svg>
                <div class="">
                    <h5>30 cm &#8960</h5>
                    <h5>4 slices</h5>
                </div>
            </div>
            <div id="6slices" class="diameterChoseDiv choseHorizontalAlign col ps-1 pe-1 ms-5 me-5">
                <svg class="diameterChose mb-2">
                    <ellipse style="fill: rgb(180, 180, 180); stroke: rgb(216, 216, 216); stroke-width: 3px" cx="125" cy="125" rx="123" ry="123"></ellipse>
                    <line style="fill: rgb(255, 255, 255); stroke: rgb(255, 255, 255); stroke-width: 3px" x1="125" y1="0" x2="125" y2="250"></line>
                    <line style="fill: rgb(255, 255, 255); stroke: rgb(255, 255, 255); stroke-width: 3px" x1="17" y1="188" x2="233" y2="62"></line>
                    <line style="fill: rgb(255, 255, 255); stroke: rgb(255, 255, 255); stroke-width: 3px" x1="17" y1="62" x2="233" y2="188"></line>
                </svg>
                <div class="">
                    <h5>40 cm &#8960</h5>
                    <h5>6 slices</h5>
                </div>
            </div>
            <div id="8slices" class="diameterChoseDiv choseHorizontalAlign col ps-1 pe-1 ms-5 me-1">
                <svg class="diameterChose mb-2">
                    <ellipse style="fill: rgb(180, 180, 180); stroke: rgb(216, 216, 216); stroke-width: 3px" cx="125" cy="125" rx="123" ry="123"></ellipse>
                    <line style="fill: rgb(255, 255, 255); stroke: rgb(255, 255, 255); stroke-width: 3px" x1="125" y1="0" x2="125" y2="250"></line>
                    <line style="fill: rgb(255, 255, 255); stroke: rgb(255, 255, 255); stroke-width: 3px" x1="0" y1="125" x2="250" y2="125"></line>
                    <line style="fill: rgb(255, 255, 255); stroke: rgb(255, 255, 255); stroke-width: 3px" x1="213.546" y1="213.546" x2="36.769" y2="36.769"></line>
                    <line style="fill: rgb(255, 255, 255); stroke: rgb(255, 255, 255); stroke-width: 3px" x1="36.454" y1="213.546" x2="213.231" y2="36.769"></line>
                </svg>
                <div class="">
                    <h5>50 cm &#8960</h5>
                    <h5>8 slices</h5>
                </div>
            </div>
            <input id="nr_of_slices" value=null type="hidden" asp-for="NrOfSlices" />
        </div>
    </div>
    <div class="container pb-2 pt-2">
        <hr />
        <div class="row col-12 mb-3 mt-3 text-center">
            <div class="col-sm-4">
                <div id="pizza-creator" class="pizzaCustomSvg">
                    <svg id="pizza-slices" class="pizzaSvgSize">  </svg>
                </div>
            </div>
            <div class="col-sm-1">
                <div class="vr" style="height:100%; width:1px;"></div>
            </div>
            <div class="col-sm-7">
                <div id="pizzaListDiv" class="pizzaCustomBoxAlign pizzaCustomBoxDimension flexColumnContainer addScroll">
                    <h4 id="result" class="boxAlign">Press on slice and chose a pizza</h4>
                </div>
            </div>
        </div>
    </div>
    <div class="container pb-3 pt-2">
        <hr />
        <div class="text-center">
            <button type="submit" class="btn btn-secondary ps-5 pe-5 text-capitalize "> get pizza </button>
        </div>
    </div>
</form>

<script src="~/js/GlobalVariables.js" asp-append-version="true"></script>
<script src="~/js/DiameterSelector.js" asp-append-version="true"></script>
<script src="~/js/PizzaSliceSelector.js" asp-append-version="true"></script>
<script src="~/js/PatternSelector.js" asp-append-version="true"></script>